APP_NAME=FlexiConvert
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_TIMEZONE=Asia/Jakarta
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=flexiconvert
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_EXPIRE_ON_CLOSE=false
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Queue Configuration for Performance
DB_QUEUE_RETRY_AFTER=60
DB_QUEUE_TABLE=jobs
DB_QUEUE=default

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration - Gmail SMTP Setup
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-gmail@gmail.com
MAIL_PASSWORD=your-16-digit-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="your-gmail@gmail.com"
MAIL_FROM_NAME="FlexiConvert"

# Alternative Email Options (commented out)
# Option 2: Mailtrap (For testing)
# MAIL_MAILER=smtp
# MAIL_HOST=sandbox.smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@flexiconvert.com"
# MAIL_FROM_NAME="FlexiConvert"

# Option 3: Local development (logs only)
# MAIL_MAILER=log
# MAIL_FROM_ADDRESS="noreply@flexiconvert.com"
# MAIL_FROM_NAME="FlexiConvert"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# PDF Tools Configuration
# Office to PDF conversion engine: 'libreoffice' (recommended) or 'phpoffice'
ENGINE_OFFICE_TO_PDF=libreoffice

# LibreOffice executable path (optional override)
# LIBREOFFICE_PATH=/usr/bin/libreoffice

# Ghostscript executable path (optional override)  
# GHOSTSCRIPT_PATH=/usr/bin/gs

# File cleanup retention period (hours)
CLEANUP_RETENTION_HOURS=24

# PDF Tools Logging
LOG_CONVERSIONS=true
LOG_PERFORMANCE_METRICS=true

# File size limits (bytes)
MAX_FILE_SIZE=52428800
MAX_TOTAL_SIZE=104857600

# Processing timeouts (seconds)
LIBREOFFICE_TIMEOUT=60
GHOSTSCRIPT_TIMEOUT=60

# PDF compression quality presets
# Options: low, medium, high, maximum
DEFAULT_COMPRESSION_QUALITY=medium
